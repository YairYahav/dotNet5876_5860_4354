<Window x:Class="PL.Courier.CourierListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Courier"
        mc:Ignorable="d"
        Title="Courier List" Height="640" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Loaded="Window_Loaded" Closing="Window_Closing">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Delivery Type:" Grid.Column="0" VerticalAlignment="Center" FontSize="14" FontWeight="Bold" Margin="0,0,10,0"/>

            <ComboBox Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"
                      ItemsSource="{Binding Source={StaticResource DeliveryTypeCollectionKey}}"
                      SelectedValue="{Binding DeliveryTypeFilter, Mode=TwoWay}">
            </ComboBox>
        </Grid>

        <ListView Grid.Row="1" Margin="10" 
                  ItemsSource="{Binding CourierList}" 
                  SelectedItem="{Binding SelectedCourier}"
                  MouseDoubleClick="ListView_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="80" DisplayMemberBinding="{Binding Id}" />
                    <GridViewColumn Header="Name" Width="120" DisplayMemberBinding="{Binding FullName}" />
                    <GridViewColumn Header="Phone" Width="100" DisplayMemberBinding="{Binding PhoneNumber}" />
                    <GridViewColumn Header="Type" Width="80" DisplayMemberBinding="{Binding DeliveryType}" />
                    <GridViewColumn Header="Active" Width="60" DisplayMemberBinding="{Binding IsActive}" />
                    <GridViewColumn Header="On Time" Width="60" DisplayMemberBinding="{Binding NumberOfDeliveriesCourierCompletedOnTime}" />

                    <GridViewColumn Header="Actions" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Delete" Click="BtnDelete_Click" Background="#FFDDDD" FontWeight="Bold"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Content="Add Courier" Grid.Row="2" HorizontalAlignment="Center" Height="40" Width="150" Margin="10" FontSize="14" FontWeight="Bold"
                Click="BtnAdd_Click"/>
    </Grid>
</Window>